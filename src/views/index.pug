extends layout

block content
  div(class='flex flex-col sm:block relative')
    p(class='text-3xl text-center app-text-primary mb-2') Welcome to #{app}
        
  each item in data 
    div(class='app-card my-3.5')
      div(class='p-2')
        p 
          b #{item.text}: 
          pre(class='whitespace-pre-wrap break-all') #{item.value}
